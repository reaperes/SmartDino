<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/login_charselect_image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_charselect" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="220dp"
	        android:gravity="bottom"
            android:padding="20dp">
	
			<FrameLayout
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:layout_weight="1" 
	            android:layout_marginLeft="50dp">
	        
		        <ImageView
		            android:id="@+id/login_charselect_image_char1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/image_char_egg" />

	            <TextView
	                android:id="@+id/login_charselect_text_char1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="새로 시작하기" />

			</FrameLayout>
	
			<FrameLayout
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:layout_weight="1" >
	        
		        <ImageView
		            android:id="@+id/login_charselect_image_char2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/image_char_egg" />

	            <TextView
	                android:id="@+id/login_charselect_text_char2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="새로 시작하기" />

			</FrameLayout>	

			<FrameLayout
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:layout_weight="1" 
	            android:layout_marginRight="50dp">
	        
		        <ImageView
		            android:id="@+id/login_charselect_image_char3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/image_char_egg" />

	            <TextView
	                android:id="@+id/login_charselect_text_char3"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="새로 시작하기" />

			</FrameLayout>
					
		</LinearLayout>
	
	    <Button
	        android:id="@+id/charselect_button1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="캐릭터 삭제" />
    
    </LinearLayout>
	    
</FrameLayout>