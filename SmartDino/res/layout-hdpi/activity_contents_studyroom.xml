<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/contents_studyroom_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_contents_studyroom" />

    <ImageView
        android:id="@+id/contents_studyroom_memory"
        android:layout_width="115dp"
        android:layout_height="164dp"
        android:layout_marginLeft="50dp"
		android:background="@drawable/item_contents_studyroom_memory" />

    <ImageView
        android:id="@+id/contents_studyroom_knowledge"
        android:layout_width="100dp"
        android:layout_height="132dp"
        android:layout_marginLeft="124dp"
		android:background="@drawable/item_contents_studyroom_knowledge" />

    <ImageView
        android:id="@+id/contents_studyroom_english"
        android:layout_width="111dp"
        android:layout_height="87dp"
        android:layout_marginTop="186dp"
        android:layout_marginLeft="98dp"
		android:background="@drawable/item_contents_studyroom_english" />   
    
    <ImageView
        android:id="@+id/contents_studyroom_math"
        android:layout_width="63dp"
        android:layout_height="79dp"
        android:layout_marginTop="147dp"
        android:layout_marginLeft="359dp"
		android:background="@drawable/item_contents_studyroom_math" />
    
    <ImageView
        android:id="@+id/contents_studyroom_dino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</FrameLayout>